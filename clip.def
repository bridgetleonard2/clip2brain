Bootstrap: docker
From: nvidia/cuda:12.1.0-cudnn8-devel-ubuntu20.04

%post
    # Downloads the latest package lists (important).
    apt-get update -y
    # Runs apt-get while ensuring that there are no user prompts that would
    # cause the build process to hang.
    # python3-tk is required by matplotlib.
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        python3 \
        python3-dev \
        python3-tk \
        python3-pip \
        python3-setuptools
    # Create a symbolic link from python3 to python
    ln -s /usr/bin/python3 /usr/bin/python
    # Reduce the size of the image by deleting the package lists we downloaded,
    # which are useless now.
    rm -rf /var/lib/apt/lists/*
    # Install Python modules and upgrade transformers.
    pip3 install clip Cython==0.29.36 h5py imageio matplotlib \
        nibabel numpy open_clip_torch pandas Pillow pycocotools \
        pycortex scikit-image scikit-learn scipy seaborn setuptools \
        statsmodels timm torchextractor torchgel tqdm wget wheel

# Run the shell script with the arguments passed to the container
    exec /bin/sh "$@"
